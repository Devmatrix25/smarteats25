# Notification Service Dockerfile
FROM node:18-alpine

WORKDIR /app

COPY backend/services/notification-service/package*.json ./
COPY backend/queue/package*.json ../queue/

RUN npm install
RUN cd ../queue && npm install

COPY backend/services/notification-service/ ./
COPY backend/queue/ ../queue/

EXPOSE 4006

CMD ["node", "server.js"]
