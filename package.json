{
  "name": "smarteats-monorepo",
  "version": "1.0.0",
  "description": "SmartEats - Full-Stack Food Delivery Platform with Microservices Architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "backend/services/*",
    "backend/sockets",
    "backend/queue"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:customer": "npm run dev --workspace=apps/customer-app",
    "dev:restaurant": "npm run dev --workspace=apps/restaurant-app",
    "dev:delivery": "npm run dev --workspace=apps/delivery-app",
    "dev:admin": "npm run dev --workspace=apps/admin-app",
    "dev:gateway": "npm run dev --workspace=backend/api-gateway",
    "dev:auth": "npm run dev --workspace=backend/services/auth-service",
    "dev:order": "npm run dev --workspace=backend/services/order-service",
    "dev:restaurant-service": "npm run dev --workspace=backend/services/restaurant-service",
    "dev:delivery-service": "npm run dev --workspace=backend/services/delivery-service",
    "dev:payment": "npm run dev --workspace=backend/services/payment-service",
    "dev:notification": "npm run dev --workspace=backend/services/notification-service",
    "dev:sockets": "npm run dev --workspace=backend/sockets",
    "build:frontend": "vite build",
    "build": "npm run build --workspaces",
    "build:customer": "npm run build --workspace=apps/customer-app",
    "build:restaurant": "npm run build --workspace=apps/restaurant-app",
    "build:delivery": "npm run build --workspace=apps/delivery-app",
    "build:admin": "npm run build --workspace=apps/admin-app",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "install:all": "npm install",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:build": "docker-compose -f infrastructure/docker/docker-compose.yml build"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@react-oauth/google": "^0.12.2",
    "@tanstack/react-query": "^5.17.9",
    "axios": "^1.6.5",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.25",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.312.0",
    "react": "^18.2.0",
    "react-day-picker": "^9.11.3",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "recharts": "^3.5.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^1.3.1",
    "tailwind-merge": "^3.4.0"
  }
}
